<form action="/user/login" method="POST">
  <h2>Login</h2>
  <div class="input-field">
    <input
      type="text"
      name="username"
      id="username"
      placeholder="Enter Username"
    />
  </div>
  <div class="input-field">
    <input
      type="password"
      name="password"
      id="password"
      placeholder="Enter Password"
    />
  </div>

  <div class="user-messages"><%- include ('partials/messages') %></div>

  <button type="submit">Login</button>
</form>
